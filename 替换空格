public class Solution {
    public String replaceSpace(StringBuffer str) {
    	String sti = str.toString();
        
        StringBuffer sb = new StringBuffer();
        for(int i = 0; i<sti.length(); i++){
            if(sti.charAt(i)==' '){
                sb.append("%20");
            }else{
                sb.append(sti.charAt(i));
            }
        }
        return sb.toString();
    }
}
